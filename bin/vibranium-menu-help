#!/usr/bin/env bash

source "$VIBRANIUM_PATH/vibranium-core-lib"

INDEX=0
OPTIONS=( "Hyprland"  "Vibranium"  "Arch Linux")

while :; do
	CHOSEN="$(printf "%s\n" "${OPTIONS[@]}" | rofi_cmd "Help" "ESC to go back" -selected-row "$INDEX")"
	[[ -z "$CHOSEN" ]] && exit 0

    for i in "${!OPTIONS[@]}"; do
        if [ "${OPTIONS[$i]}" = "$CHOSEN" ]; then
			INDEX="$i"
			break
        fi
    done

	case "$CHOSEN" in
		"Hyprland")
			LINK="https://wiki.hypr.land"
			;;
		"Arch Linux")
			LINK="https://wiki.archlinux.org"
			;;
		"Vibranium")
			LINK="https://github.com/shvedes/vibranium/wiki"
	esac

	vibranium-cmd-launch-cmd chromium --app="$LINK"
	vibranium-cmd-kill-rofi
done
