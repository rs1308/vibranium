#!/usr/bin/env bash

# shellcheck disable=SC2034

source "$VIBRANIUM_PATH/vibranium-core-lib"

export SUDO_PROMPT
                    SUDO_PROMPT="$(printf '%s[VIBRANIUM]%s Password for %s: ' "$RED" "$RESET" "$USER")"

if ! tty -s; then
    exec setsid vibranium-cmd-launch-terminal "$0"
    exit 0
fi

printf "\n\e[33m%s\e[0m\n\n" "$(cat "$VIBRANIUM/logo.txt")"

# Source: omarchy
fzf_args=(
    --multi
    --preview 'pacman -Qi {1}'
    --preview-label='alt-p: toggle description, alt-j/k: scroll preview pane, ctrl-j/k: next/prev item, tab: multi-select'
    --preview-label-pos='bottom'
    --preview-window 'right:65%:wrap'
    --bind 'alt-p:toggle-preview'
    --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
    --bind 'alt-k:preview-up,alt-j:preview-down'
    --color 'pointer:blue,marker:white'
)

# you don't wanna delete important system packages, do you?
# so keep -Qqe to show only explicitly installed packages
mapfile -t chosen < <(pacman -Qqe | fzf "${fzf_args[@]}")

if [ ${#chosen[@]} -eq 0 ]; then
    echo -e "${RED}[VIBRANIUM]${RESET} Operation aborted"
    exit 1
fi

prompt2=$'\e[0;33m[VIBRANIUM]\e[0m You are about to remove the following packages: \e[0;33m'"${chosen[*]}"$'\e[0m. Proceed? (Y/n): '

while :; do
    printf '\e[?25h'  # show cursor
    printf "%s" "$prompt2"
    read -r answer
    case "$answer" in
        [Yy][Ee][Ss] | [Yy] | "")
            if ! sudo -v; then
                echo -e "${RED}[VIBRANIUM]${RESET} Operation aborted"
                exit 1
            fi

            sudo pacman -Rns "${chosen[@]}"
            echo -e "${GREEN}[VIBRANIUM]${RESET} Operation completed successfully"
            read -n1 -r -p $'\e[0;33m[VIBRANIUM]\e[0m Press any key to close this window' dummy
            exit 0
            ;;
        [Nn][Oo] | [Nn])
            printf '\e[?25l'  # hide cursor
            echo -e "${RED}[VIBRANIUM]${RESET} Operation aborted"
            exit 1
            ;;
        *)  # Wrong input
            printf '\e[A\r\e[K'  # move up, clear line
            ;;
    esac
done
